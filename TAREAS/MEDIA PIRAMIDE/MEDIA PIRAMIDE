#include <iostream>

using namespace std;

int main() {
    int filas;

    cout << "Ingrese el nÃºmero de filas para la escalera de asteriscos: ";
    cin >> filas;

    for (int i = 0; i < filas; i++) {
        for (int j = 0; j <= i; j++) {
            cout << "*";
        }
        cout << "\n";
    }

    return 0;
}